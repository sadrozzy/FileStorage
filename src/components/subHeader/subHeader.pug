mixin subheader__btn (icon, name, type)
    .subheader__btn(class= type)
        img(src= require(`@/components/subHeader/_theme/_light/${icon}.svg`))
        span #{name}

mixin subheader__sort
    .subheader__sort
        img(src= require(`@/components/subHeader/_theme/_light/sort.svg`))
        span.sort__value По Названию
        img(src= require(`@/components/subHeader/_theme/_light/chevron.svg`))

mixin subheader
    .subheader
        .subheader__col.col1
            +subheader__btn ('upload', 'Upload', 'upload')
            +subheader__btn ('add', 'Add Folder', 'addFolder')
        .subheader__col.col2
            +subheader__sort
            .subheader__viewMode
                img(src= require(`@/components/subHeader/_theme/_light/grid.svg`))